<div class="container">
  <h1>Welcome to TweetSnatcher!</h1>
  <p>Hello, stalker!</p>

   <h4>Tweets from <%= @user.username %></h4>

   <p><%= @now %></p>
   <% @tweets.each do |tweet| %>
   <p>
   	<dt><%= tweet.text %></dt>
   	<dd> posted on <%= tweet.created_at %></dd>
   </p>
   <% end %>

</div>